<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="template" type="idmNotificationTemplateType"/>

  <xs:complexType name="idmNotificationTemplateType">
    <xs:sequence>
      <xs:element name="code" type="xs:string"/>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="subject" type="xs:string"/>
      <xs:element name="bodyHtml" type="xs:string" minOccurs="0"/>
      <xs:element name="bodyText" type="xs:string" minOccurs="0"/>
      <xs:element name="parameter" type="xs:string" minOccurs="0"/>
      <xs:element name="systemTemplate" type="xs:boolean" minOccurs="0"/>
      <xs:element name="moduleId" type="xs:string" minOccurs="0"/>
      <xs:element name="sender" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>

